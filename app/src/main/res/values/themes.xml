<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ByteChute" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSurface">@color/bytechute_white</item>
        <item name="colorPrimary">@color/bytechute_red</item>
        <item name="colorPrimaryDark">@color/bytechute_grey</item>
        <item name="colorAccent">@color/bytechute_red</item>
        <item name="android:textColorPrimary">@color/bytechute_black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
    </style>


    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/bytechute_black</item>
    </style>
</resources>